# Database Connection String
# Get this from your Neon console at https://console.neon.tech
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Groq API Key for voice transcription
# Get this from https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# JWT Secret for authentication (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_generated_jwt_secret_here
